{% extends 'layouts/base.njk' %}

{% block content %}

  <h1>Users</h1>

  <!-- List of users -->
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Avatar</th>
        <th scope="col">Info</th>
        <th style="width: 20%" scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for user in users %}
        <tr>
          <td>[ ]</th>
          <td>{{ user.name }}, {{ user.age }}</td>
          <td>
            <a class="btn btn-success" href="/users/relationship/{{ user._id }}/type/0" role="button">Add to friends</a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table> 



{% endblock %}
