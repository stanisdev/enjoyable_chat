{% extends 'layouts/base.njk' %}

{% block content %}

  <h1>Users</h1>

  <div style="float: right; margin-top: -35px; margin-bottom: 25px;">
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="text" placeholder="Search">
      <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>

  <!-- List of users -->
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Avatar</th>
        <th scope="col">Info</th>
        <th style="width: 20%" scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for user in users %}
        <tr>
          <td>[ ]</th>
          <td>{{ user.name }}, {{ user.age }}</td>
          <td>
            {% if user.isFriend %}
              <span class="badge badge-warning">Friend</span>
              <a href="/users/write?id={{ user._id }}"><span class="badge badge-info">Write</span></a>
            {% elif user.requestSent %}
              Request sent
            {% else %}
              <a class="btn btn-success" href="/users/relationship/?defendant={{ user._id }}&type=0" role="button">Add to friends</a>
            {% endif %}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table> 



{% endblock %}
